@model  MundoDaFoto.WebMvc4.Models.RegisterModel
@using MundoDaFoto.Helpers

@{
    ViewBag.Title = "Register";
}

<div id="container">

    <h2>Criar uma conta</h2>
    <p>
        Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
    </p>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" } )) {
        @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
        
        <h2 class="form-signin-heading">Informações da conta</h2>
                    
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name", autofocus = "", required = "" })
        @Html.ValidationMessageFor(m => m.Name)
                
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", required = "" })
        @Html.ValidationMessageFor(m => m.Email)
                
        @Html.DropDownListCustom("CountrySelecionado", (IEnumerable<SelectListItem>)ViewBag.Countryes, "Country")
        
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "" })
        @Html.ValidationMessageFor(m => m.Password)

        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", required = "" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword)

        <button class="btn btn-lg btn-success btn-block" type="submit">Register</button>
    }

</div>