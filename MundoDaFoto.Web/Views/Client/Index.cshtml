@model MundoDaFoto.Web.Models.ClientModels

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Nome, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @if (ViewBag.IsUpdate == null && ViewBag.IsUpdate)
            {
                @Html.EditorFor(p => p.Nome, new { @class = "form-control" })
            }
            else
            {
                @Html.TextBoxFor(p => p.Nome, new { Style = "width: 250px", @class = "form-control" })
            }
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Email, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @if (ViewBag.IsUpdate)
            {
                @Html.EditorFor(p => p.Email, new { @class = "form-control" })
            }
            else
            {
                @Html.TextBoxFor(p => p.Email, new { Style = "width: 250px", @class = "form-control" })
            }
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Paises, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
               @Html.DropDownListFor(p => p.Paises, (SelectList) ViewBag.Paises, "..:Choose your Country")
        </div>
    </div>


}







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
