<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">

  <class name="MundoDaFoto.Dominio.Cliente, MundoDaFoto.Dominio" table="cliente" abstract="false">

    <id name="Id" column="IdCliente" unsaved-value="null">
      <generator class="identity"/>
    </id>

    <property name="Nome" column="Nome" />
    <property name="Email" column="Email" />
    <property name="Senha" column="Senha" />
    
  <many-to-one name="Municipio" class="MundoDaFoto.Dominio.Cidade, MundoDaFoto.Dominio" column="Cidade_IdCidade" />
  <many-to-one name="Perfil" class="MundoDaFoto.Dominio.TipoCliente, MundoDaFoto.Dominio" column="TipoCliente_IdTipoCliente" />
  
  </class>

</hibernate-mapping>
