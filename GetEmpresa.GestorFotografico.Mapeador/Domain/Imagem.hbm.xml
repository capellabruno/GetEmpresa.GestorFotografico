<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="GetEmpresa.GestorFotografico.Domain.Portifolio.Imagem, GetEmpresa.GestorFotografico.Domain" table="Imagem" lazy="false">

    <id name="Id" column="IdImagem" unsaved-value="null">
      <generator class="identity"></generator>
    </id>

    <property name="Tamanho" column="Tamanho" />
    <property name="Ext" column="Ext" />
    <property name="Nome" column="Nome" />
    <property name="Caminho" column="Caminho" />
    <property name="Principal" column="Principal" />

    <many-to-one name="PortifolioPai" column="IdPortifolio" class="GetEmpresa.GestorFotografico.Domina.Portifolio.Portifolio, GetEmpresa.GestorFotografico.Domain" />

    <bag name="Comentarios" cascate="all" lazy="true">
      <key column="IdImagem" />
      <one-to-many class="GetEmpresa.GestorFotografico.Domain.Portifolio.Comantario, GetEmpresa.GestorFotografico.Domain"></one-to-many>
    </bag>
  </class>
</hibernate-mapping>